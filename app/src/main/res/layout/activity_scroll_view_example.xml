<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScrollViewExample">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="16dp"
        app:srcCompat="@mipmap/ic_icon_bike_round" />

    <Button
        android:id="@+id/bikeBtn"
        android:background="#E91E63"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bike" />

    <Switch
        android:id="@+id/swAction"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:text="Action"
        android:textAlignment="textEnd"
        android:textStyle="bold" />

    <Button
        android:id="@+id/actionBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Action1" />

    <Button
        android:id="@+id/actionBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Action2" />

    <Button
        android:id="@+id/actionBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Action3" />

    <Button
        android:id="@+id/actionBtn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Action4" />

    <Button
        android:id="@+id/actionBtn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Action5" />

</LinearLayout>
</ScrollView>